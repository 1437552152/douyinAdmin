.login {
  width: 100%;
  height: 100%;
  background-image: url('/static/images/32bc2a715c28f91399bbc488597d5ce.jpg');
  background-size: cover;
  background-position: center;
  position: relative;
}
.login-con {
  position: absolute;
  right: 160px;
  top: 50%;
  transform: translateY(-60%);
  width: 300px;
}
.login-con-header {
  font-size: 16px;
  font-weight: 300;
  text-align: center;
  padding: 30px 0;
}
.login-con .form-con {
  padding: 10px 0 0;
}
.login-con .login-tip {
  font-size: 10px;
  text-align: center;
  color: #c3c3c3;
}
.login-con .phone-num {
  font-size: 16px;
  font-weight: 700;
  text-align: center;
  line-height: 32px;
  border: 1px solid #dddee1;
}
